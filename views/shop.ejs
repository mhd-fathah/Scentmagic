<script>
    $(function () {
        $("#slider-range").slider({
            range: true,
            min: 0,
            max: 10000,
            values: [0, 10000],
            slide: function (event, ui) {
                $("#minamount").val(ui.values[0]);
                $("#maxamount").val(ui.values[1]);
            },
        });

        $("#minamount").val($("#slider-range").slider("values", 0));
        $("#maxamount").val($("#slider-range").slider("values", 1));

        $("#minamount, #maxamount").on("change", function () {
            let minPrice = parseInt($("#minamount").val()) || 0;
            let maxPrice = parseInt($("#maxamount").val()) || 10000;

            if (minPrice > maxPrice) {
                minPrice = maxPrice;
                $("#minamount").val(minPrice);
            }

            if (maxPrice < minPrice) {
                maxPrice = minPrice;
                $("#maxamount").val(maxPrice);
            }

            $("#slider-range").slider("values", [minPrice, maxPrice]);
        });
    });
</script>

<script>
    document.getElementById("filter-btn").addEventListener("click", function () {
        const minPrice = document.getElementById("minamount").value;
        const maxPrice = document.getElementById("maxamount").value;

        if (!minPrice && !maxPrice) {
            alert("Please provide at least one price value.");
            return;
        }

        if (minPrice && maxPrice && parseFloat(minPrice) > parseFloat(maxPrice)) {
            alert("Minimum price cannot be greater than maximum price.");
            return;
        }

        fetch(`/shop?minPrice=${minPrice}&maxPrice=${maxPrice}`, {
            headers: {
                "X-Requested-With": "XMLHttpRequest",
            },
        })
            .then((response) => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then((data) => {
                const { products, totalProducts } = data;

                const filterFoundElement = document.querySelector(
                    ".filter__found h6 span"
                );
                if (filterFoundElement) {
                    filterFoundElement.textContent = totalProducts;
                }

                const productList = document.querySelector(".product-listing");
                productList.innerHTML = "";

                products.forEach((product) => {
                    const productHTML = `
        <div class="col-lg-4 col-md-6 col-sm-6">
          <div class="product__item">
            <div class="product__item__pic set-bg">
              <a href="/product/${product._id}">
                <img src="http://localhost:3000/public/uploads/products/${product.product_images[0]
                        }" alt="${product.product_name}">
              </a>
              <ul class="product__item__pic__hover">
                <li>
                  <a href="#" class="add-to-wishlist" data-id="${product._id
                        }" data-name="${product.product_name}" data-price="${product.discount_price
                        }">
                    <i class="fa fa-heart"></i>
                  </a>
                </li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li>
                  <a href="#" class="add-to-cart" data-id="${product._id
                        }" data-name="${product.product_name}" data-price="${product.discount_price
                        }">
                    <i class="fa fa-shopping-cart"></i>
                  </a>
                </li>
              </ul>
            </div>
            <div class="product__item__text">
              <h6><a href="#">${product.product_name}</a></h6>
              <h5>₹${product.discount_price.toFixed(2)}
                <span style="text-decoration: line-through; color: #888;">₹${product.regular_price.toFixed(
                            2
                        )}</span>
              </h5>
              ${product.stock_status === "in_stock"
                            ? '<p style="color: green;">In Stock</p>'
                            : '<p style="color: red;">Out of Stock</p>'
                        }
            </div>
          </div>
        </div>
      `;
                    productList.innerHTML += productHTML;
                });
            })
            .catch((error) => console.error("Error fetching products:", error));
    });
</script>

<script>
    document.querySelectorAll(".add-to-wishlist").forEach((button) => {
        button.addEventListener("click", function (e) {
            e.preventDefault();

            const productId = this.getAttribute("data-id");
            const productName = this.getAttribute("data-name");
            const productPrice = this.getAttribute("data-price");

            fetch("/wishlist/add", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    productId: productId,
                    productName: productName,
                    productPrice: productPrice,
                }),
            })
                .then(async (response) => {
                    const data = await response.json();

                    if (response.status === 400 || response.status === 500) {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: data.message || "Something went wrong!",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    } else if (response.status === 201) {
                        Swal.fire({
                            icon: "success",
                            title: "Product added to wishlist!",
                            text: "Your item has been added successfully.",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Unexpected Error",
                            text: "An unexpected error occurred. Please try again.",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    }
                })
                .catch((error) => {
                    console.error("Error adding product to wishlist:", error);

                    Swal.fire({
                        icon: "error",
                        title: "Something went wrong!",
                        text: "Please try again later.",
                        showConfirmButton: false,
                        timer: 1500,
                    });
                });
        });
    });

    document
        .getElementById("searchForm")
        .addEventListener("submit", function (e) {
            e.preventDefault();

            const query = document.getElementById("searchQuery").value.trim();

            if (query === "") {
                Swal.fire({
                    title: "Error!",
                    text: "Please enter a search term.",
                    icon: "error",
                    confirmButtonText: "Okay",
                });
                return;
            }
            window.location.href = `/search?q=${encodeURIComponent(query)}`;
        });
</script>

<script>
    document.querySelectorAll(".add-to-cart").forEach((button) => {
        button.addEventListener("click", function (e) {
            e.preventDefault();

            const productId = this.getAttribute("data-id");
            const productName = this.getAttribute("data-name");
            const productPrice = this.getAttribute("data-price");

            fetch("/cart/add", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    productId: productId,
                    productName: productName,
                    productPrice: productPrice,
                }),
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.message) {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: data.message,
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    } else {
                        Swal.fire({
                            icon: "success",
                            title: "Product added to cart!",
                            text: "Your item has been added successfully.",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    }
                })
                .catch((error) => {
                    console.error("Error adding product to cart:", error);

                    Swal.fire({
                        icon: "error",
                        title: "Something went wrong!",
                        text: "Please try again later.",
                        showConfirmButton: false,
                        timer: 1500,
                    });
                });
        });
    });

    function applySorting(sortOption) {
        const url = `/shop?sort=${sortOption}`;
        window.location.href = url;
    }

    function applyPagination(page) {
        const sortValue = document.getElementById("sortOptions").value;

        fetch(`/products?page=${page}&sort=${sortValue}`, {
            method: "GET",
            headers: {
                "Content-Type": "application/json",
            },
        })
            .then((response) => response.json())
            .then((data) => {
                const productList = document.getElementById("product-list");
                productList.innerHTML = "";

                data.products.forEach((product) => {
                    const productElement = document.createElement("div");
                    productElement.classList.add("product-item");
                    productElement.innerHTML = `
        <h3>${product.product_name}</h3>
        <p>Price: ${product.regular_price}</p>
      `;
                    productList.appendChild(productElement);
                });

                updatePagination(data.totalPages, data.currentPage);
            })
            .catch((error) => console.error("Error fetching products:", error));
    }

    function updatePagination(totalPages, currentPage) {
        const paginationContainer = document.querySelector(".product__pagination");
        paginationContainer.innerHTML = "";

        if (currentPage > 1) {
            paginationContainer.innerHTML += `<a href="#" onclick="applyPagination(${currentPage - 1
                })"><i class="fa fa-long-arrow-left"></i></a>`;
        }

        for (let i = 1; i <= totalPages; i++) {
            paginationContainer.innerHTML += `<a href="#" class="${currentPage === i ? "active" : ""
                }" onclick="applyPagination(${i})">${i}</a>`;
        }

        if (currentPage < totalPages) {
            paginationContainer.innerHTML += `<a href="#" onclick="applyPagination(${currentPage + 1
                })"><i class="fa fa-long-arrow-right"></i></a>`;
        }
    }
</script>