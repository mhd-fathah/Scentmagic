<section class="breadcrumb-section py-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb px-4 py-3 mb-0 rounded shadow-sm" style="background-color: #f8f9fa; border-left: 4px solid #ffc107;">
            <li class="breadcrumb-item">
              <a href="/" class="text-decoration-none text-dark fw-bold">
                <i class="bi bi-house-door"></i> Home
              </a>
            </li>
            <li class="breadcrumb-item">
              <a href="/shop" class="text-decoration-none text-dark fw-bold">
                Shop
              </a>
            </li>
            <% if (category) { %>
              <li class="breadcrumb-item active text-secondary fw-semibold" aria-current="page">
                <%= category.name %>
              </li>
            <% } else { %>
              <li class="breadcrumb-item active text-secondary fw-semibold" aria-current="page">
                All Products
              </li>
            <% } %>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</section>

<h2 class="text-center mb-5" style="font-family: 'Georgia', serif; font-weight: bold;">Search Results for "<%= query %>"</h2>

<% if (category) { %>
<h5 class="text-center">Category: <%= category.name %></h5>
<% } %>

<% if (products.length === 0) { %>
<div class="alert alert-info text-center" role="alert">
  No products found for your search query. Please try a different one.
</div>
<% } else { %>
<div class="list-group">
  <% products.forEach(function(product) { %>
    <div class="list-group-item list-group-item-action d-flex align-items-center" style="border: 1px solid #ddd; border-radius: 5px; margin-bottom: 15px;">
      <img class="me-3" src="http://localhost:3000/public/uploads/products/<%= product.product_images[0] %>" alt="<%= product.product_name %>" style="object-fit: cover; height: 100px; width: 100px; border-radius: 5px;">
      <div>
        <h5 class="mb-1" style="font-family: 'Georgia', serif; color: #222222; font-weight: bold; font-size: 1.25rem;"><%= product.product_name %></h5>
        <p class="mb-1" style="color: #888; font-size: 0.9rem;">Price: â‚¹<%= product.discount_price %></p>
        <a href="/product/<%= product._id %>" class="btn btn-primary mt-2" style="background-color: #D4AF37; border: none; font-weight: bold;">View Details</a>
      </div>
    </div>
  <% }) %>
</div>
<% } %>
