<h2 class="text-center mb-5" style="font-family: 'Georgia', serif; font-weight: bold;">Search Results for "<%= query %>"</h2>

<% if (products.length === 0) { %>
    <div class="alert alert-info text-center" role="alert">
        No products found for your search query. Please try a different one.
    </div>
<% } else { %>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        <% products.forEach(function(product) { %>
            <div class="col text-center">
                <div class="card shadow-lg border-light rounded" style="width: 300px; height: 450px;">
                    <img class="card-img-top" src="http://localhost:3000/public/uploads/products/<%= product.product_images[0] %>" alt="<%= product.product_name %>" style="object-fit: cover; height: 250px;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-family: 'Georgia', serif; color: #222222; font-weight: bold; font-size: 1.25rem;"><%= product.product_name %></h5>
                        <p class="card-text" style="color: #888; font-size: 0.9rem;">Price: â‚¹<%= product.discount_price %></p>
                        <a href="/product/<%= product._id %>" class="btn btn-primary w-100" style="background-color: #D4AF37; border: none; font-weight: bold;">View Details</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>
