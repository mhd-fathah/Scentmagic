                </div>

                <div class="mb-4">
                  <label for="image4" class="form-label">Product Image 4</label>
                  <input type="file" class="form-control" id="image4" name="image4" accept="image/*" />
                </div>

                <!-- Cropping containers for each image -->
                <div id="cropper-container-1" class="cropper-container" style="display: none;">
                  <img id="crop-image-1" src="" alt="Image 1 to crop" />
                  <button type="button" id="cropBtn-1" class="btn btn-primary">Crop Image 1</button>
                </div>

                <div id="cropper-container-2" class="cropper-container" style="display: none;">
                  <img id="crop-image-2" src="" alt="Image 2 to crop" />
                  <button type="button" id="cropBtn-2" class="btn btn-primary">Crop Image 2</button>
                </div>

                <div id="cropper-container-3" class="cropper-container" style="display: none;">
                  <img id="crop-image-3" src="" alt="Image 3 to crop" />
                  <button type="button" id="cropBtn-3" class="btn btn-primary">Crop Image 3</button>
                </div>

                <div id="cropper-container-4" class="cropper-container" style="display: none;">
                  <img id="crop-image-4" src="" alt="Image 4 to crop" />
                  <button type="button" id="cropBtn-4" class="btn btn-primary">Crop Image 4</button>
                </div>

                <!-- Quantity and Stock Status -->
                <div class="row">
                  <div class="col-lg-6">
                    <div class="mb-4">
                      <label class="form-label">Stock</label>
                      <input type="number" placeholder="Enter left stock" class="form-control" name="leftStock"
                        value="<%= product.leftStock %>" />
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="mb-4">
                      <label class="form-label">Quantity</label>
                      <input type="text" placeholder="Enter quantity" class="form-control" name="quantity"
                        value="<%= product.quantity %>" />
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="mb-4">
                      <label class="form-label">Net Quantity</label>
                      <input type="text" placeholder="Enter net quantity" class="form-control" name="netQuantity"
                        value="<%= product.netQuantity %>" />
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="mb-4">
                      <label class="form-label">Sales Package</label>
                      <input type="text" placeholder="Enter sales package" class="form-control" name="salesPackage"
                        value="<%= product.salesPackage %>" />
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="mb-4">
                      <label class="form-label">Stock Status</label>
                      <select class="form-control" name="stock_status">
                        <option value="in_stock" <%=product.stock_status==="in_stock" ? "selected" : "" %>>In Stock
                        </option>
                        <option value="out_of_stock" <%=product.stock_status==="out_of_stock" ? "selected" : "" %>>Out
                          of Stock</option>
                      </select>
                    </div>
                  </div>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between">
                  <button type="submit" class="btn btn-md rounded font-sm hover-up" id="saveBtn">
                    Save Changes
                  </button>
                </div>
              </form>

            </div>
