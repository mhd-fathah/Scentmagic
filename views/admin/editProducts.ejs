        <div class="col-lg-6">
          <div class="card mb-4">
            <div class="card-header">
              <h4>Edit Product Details</h4>
            </div>
            <div class="card-body">
              <!-- Product Form -->
              <form id="productForm" action="/admin/products/edit/<%= product._id %>" method="POST"
                enctype="multipart/form-data">
                <!-- Product Title -->
                <div class="mb-4">
                  <label for="product_name" class="form-label">Product Title</label>
                  <input type="text" placeholder="Type here" class="form-control" id="product_name" name="product_name"
                    value="<%= product.product_name %>" />
                </div>

                <!-- Full Description -->
                <div class="mb-4">
                  <label class="form-label">Description</label>
                  <textarea placeholder="Type here" class="form-control" rows="4"
                    name="shortDescription"><%= product.shortDescription %></textarea>
                </div>

                <div class="mb-4">
                  <label class="form-label">Full description</label>
                  <textarea placeholder="Type here" class="form-control" rows="4"
                    name="longDescription"><%= product.longDescription %></textarea>
                </div>

                <div class="mb-4">
                  <label class="form-label">Highlights</label>
                  <textarea placeholder="Type here" class="form-control" rows="4"
                    name="highlights"><%= product.highlights %></textarea>
                </div>

                <!-- Price Fields -->
                <div class="row">
                  <div class="col-lg-4">
                    <div class="mb-4">
                      <label class="form-label">Regular Price</label>
                      <input placeholder="₹" type="text" class="form-control" name="regular_price"
                        value="<%= product.regular_price %>" />
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="mb-4">
                      <label class="form-label">Discount Price</label>
                      <input placeholder="₹" type="text" class="form-control" name="discount_price"
                        value="<%= product.discount_price %>" />
                    </div>
                  </div>
                </div>

                <!-- Category -->
                <div class="mb-4">
                  <label class="form-label">Category</label>
                  <select class="form-control" id="category" name="category">
                    <% categories.forEach(function (category) { %>
                      <option value="<%= category._id %>" <%=product.category.equals(category._id) ? "selected" : "" %>
                        >
                        <%= category.name %>
                      </option>
                      <% }); %>
                  </select>
                </div>

                <!-- Existing Images Preview -->
                <div class="mb-4">
                  <label class="form-label">Current Product Images</label>
                  <div class="row">
                    <div class="col-lg-3">
                      <label class="form-label">Image 1</label>
                      <% if (product.product_images && product.product_images[0]) { %>
                        <img src="<%= product.product_images[0] %>" alt="Product Image 1" class="img-fluid" />
                        <% } else { %>
                          <p>No image uploaded</p>
                          <% } %>
                    </div>

                    <div class="col-lg-3">
                      <label class="form-label">Image 2</label>
                      <% if (product.product_images && product.product_images[1]) { %>
                        <img src="<%= product.product_images[1] %>" alt="Product Image 2" class="img-fluid" />
                        <% } else { %>
                          <p>No image uploaded</p>
                          <% } %>
                    </div>

                    <div class="col-lg-3">
                      <label class="form-label">Image 3</label>
                      <% if (product.product_images && product.product_images[2]) { %>
                        <img src="<%= product.product_images[2] %>" alt="Product Image 3" class="img-fluid" />
                        <% } else { %>
                          <p>No image uploaded</p>
                          <% } %>
                    </div>

                    <div class="col-lg-3">
                      <label class="form-label">Image 4</label>
                      <% if (product.product_images && product.product_images[3]) { %>
                        <img src="<%= product.product_images[3] %>" alt="Product Image 4" class="img-fluid" />
                        <% } else { %>
                          <p>No image uploaded</p>
                          <% } %>
                    </div>
                  </div>
                </div>



                <!-- Image Upload Inputs (to replace the old images) -->
                <div class="mb-4">
                  <label for="image1" class="form-label">Product Image 1</label>
                  <input type="file" class="form-control" id="image1" name="image1" accept="image/*" />
                </div>

                <div class="mb-4">
                  <label for="image2" class="form-label">Product Image 2</label>
                  <input type="file" class="form-control" id="image2" name="image2" accept="image/*" />
                </div>

                <div class="mb-4">
                  <label for="image3" class="form-label">Product Image 3</label>
