    <section class="content-main">
      <div class="row">
        <div class="col-9">
          <div class="content-header">
            <h2 class="content-title">Edit Product</h2>
            <div>
              <!-- Back to Product List Button -->
              <a href="/admin/products" class="btn btn-md rounded font-sm hover-up">Back to Products</a>
            </div>
