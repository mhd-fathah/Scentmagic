                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="#"><i class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">User Management</h2>
                <div>
                    <a href="/admin-register/admin_register.html" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Registered</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user => { %>
                                <tr>
                                    <td width="40%">
                                        <a href="#" class="itemside">
                                            <div class="left">
                                                <img src="<%= user.avatar %>" class="img-sm img-avatar" alt="User pic">
                                            </div>
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title"><%= user.name %></h6>
                                                <small class="text-muted">User ID: <%= user.id %></small>
                                            </div>
                                        </a>
                                    </td>
                                    <td><%= user.email %></td>
                                    <td><%= user.registeredDate %></td>
                                    <td class="text-end">
                                        <% if (user.isBlocked === false) { %>
                                            <a href="/admin/users/block/<%= user._id %>" class="btn btn-sm btn-danger rounded font-sm mt-15">Block</a>
                                        <% } else { %>
                                            <a href="/admin/users/unblock/<%= user._id %>" class="btn btn-sm btn-success rounded font-sm mt-15">Unblock</a>
                                        <% } %>
                                        
                                        <a href="/user-details/<%= user.id %>" class="btn btn-sm btn-brand rounded font-sm mt-15">View details</a>
                                    </td>
                                    
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item active"><a class="page-link" href="#">01</a></li>
                        <li class="page-item"><a class="page-link" href="#">02</a></li>
