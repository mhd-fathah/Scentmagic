                            </select>
                        </div>
                    </div>
        </header> -->
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>User</th>
                  <th>Email</th>
                  <th>Registered</th>
                  <th class="text-end">Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user=> { %>
                  <tr>
                    <td width="40%">
                      <a href="#" class="itemside">
                        <!-- <div class="left">
                          <img src="<%= user.avatar %>" class="img-sm img-avatar" alt="User pic">
                        </div> -->
                        <div class="info pl-3">
                          <h6 class="mb-0 title">
                            <%= user.name %>
                          </h6>
                          <small class="text-muted">User ID: <%= user.id %></small>
                        </div>
                      </a>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <td>
                      <%= user.createdAt.toDateString() %>
                    </td>
                    <td class="text-end">
                      <% if (user.isBlocked===false) { %>
                        <a href="/admin/users/block/<%= user._id %>"
                          class="btn btn-sm btn-danger rounded font-sm mt-15">Block</a>
                        <% } else { %>
                          <a href="/admin/users/unblock/<%= user._id %>"
                            class="btn btn-sm btn-success rounded font-sm mt-15">Unblock</a>
                          <% } %>

                            <a href="/admin/users/details/<%= user.id %>"
                              class="btn btn-sm btn-brand rounded font-sm mt-15">View details</a>
                    </td>

                  </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="pagination-area mt-15 mb-50">
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-start">

            <% if (currentPage> 1) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %>"><i
                    class="material-icons md-chevron_left"></i></a>
              </li>
              <% } %>


                <% for (let i=1; i <=totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>


                    <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>"><i
                            class="material-icons md-chevron_right"></i></a>
                      </li>
                      <% } %>
          </ul>
        </nav>
