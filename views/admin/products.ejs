          <header>
            <div class="card-body">
              <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                <% products.forEach(product=> { %>
                  <div class="col product-card" data-category="<%= product.category %>"
                    data-price="<%= product.discount_price ? product.discount_price : product.regular_price %>"
                    data-date="<%= product.created_at %>" data-views="<%= product.views %>">
                    <div class="card card-product-grid">
                      <!-- Product Image Carousel -->
                      <div id="carousel-<%= product._id %>" class="carousel slide img-wrap" data-bs-ride="carousel">
                        <% if (product.product_images && product.product_images.length> 0) { %>
                          <div class="carousel-indicators">
                            <% product.product_images.forEach((image, index)=> { %>
                              <button type="button" data-bs-target="#carousel-<%= product._id %>"
                                data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"
                                aria-current="<%= index === 0 ? 'true' : 'false' %>"></button>
                              <% }); %>
                          </div>
                          <% } %>

                            <div class="carousel-inner">
                              <% if (product.product_images && product.product_images.length> 0) { %>
                                <% product.product_images.forEach((image, index)=> { %>
                                  <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <img src="/uploads/products/<%= image %>" class="d-block w-100"
                                      alt="<%= product.product_name %>"
                                      style="width: 100%; height: 100% ; object-fit: cover;" />
                                  </div>
                                  <% }); %>
                                    <% } else { %>
                                      <div class="carousel-item active">
                                        <img src="/path/to/placeholder-image.jpg" class="d-block w-100"
                                          alt="No image available" style="width: 100px; height: 100px" />
                                      </div>
                                      <% } %>
                            </div>

                            <% if (product.product_images && product.product_images.length> 1) { %>
                              <button class="carousel-control-prev" type="button"
                                data-bs-target="#carousel-<%= product._id %>" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                              </button>
                              <button class="carousel-control-next" type="button"
                                data-bs-target="#carousel-<%= product._id %>" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                              </button>
                              <% } %>
                      </div>
                      <!-- End of Carousel -->

                      <!-- Product Details -->
                      <div class="info-wrap">
                        <a href="/admin/products/details/<%= product._id %>" class="title text-truncate">
                          <%= product.product_name %>
                        </a>
                        <div class="price mb-2">
                          <!-- Display Discount Price -->
                          ₹<%= (product.discount_price && !isNaN(product.discount_price)) ?
                            product.discount_price.toFixed(2) : product.regular_price.toFixed(2) %>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                          <a href="/admin/products/edit/<%= product._id %>"
                            class="btn btn-sm font-sm rounded btn-brand w-50 me-2 btn-success">
                            <i class="material-icons md-edit"></i> Edit
                          </a>
                          <form action="/admin/products/delete/<%= product._id %>" method="POST" class="w-50"
                            onsubmit="confirmDelete(event, this); return false;"
                            data-is-deleted="<%= product.isDeleted %>">
                            <% if (!product.isDeleted) { %>
                              <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                              <% } else { %>
                                <button type="submit" class="btn btn-sm btn-warning w-100">Undo</button>
                                <% } %>
                          </form>

                        </div>
                      </div>
                    </div>
                  </div>
                  <% }); %>
              </div>
