            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products</h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                    <a href="/admin/products/export" class="btn btn-light rounded font-md">Export</a>
                    <a href="/admin/products/import" class="btn btn-light rounded font-md">Import</a>
                    <a href="/admin/products/add" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control" id="search">
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select" id="category">
                                <option>All category</option>
                                <option>Electronics</option>
                                <option>Clothings</option>
                                <option>Something else</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select" id="sort">
                                <option>Latest added</option>
                                <option>Cheap first</option>
                                <option>Most viewed</option>
                            </select>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                      <% products.forEach(product => { %>
                        <div class="col">
                          <div class="card card-product-grid">
                            
                            <!-- Product Image (Check if image exists) -->
                            <a href="#" class="img-wrap">
                              <% if (product.product_images && product.product_images[0]) { %>
                                <img src="/<%= product.product_images[0] %>" alt="<%= product.product_name %>">
                              <% } else { %>
                                <img src="/path/to/placeholder-image.jpg" alt="No image available">
                              <% } %>
                            </a>
                            
                            <div class="info-wrap">
                              <!-- Product Name -->
                              <a href="#" class="title text-truncate"><%= product.product_name %></a>
                              
                              <!-- Price -->
                              <div class="price mb-2">
                                $<%= (product.regular_price && !isNaN(product.regular_price)) ? product.regular_price.toFixed(2) : '0.00' %>
                              </div>
                              
                              <!-- Edit Button -->
                              <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                <i class="material-icons md-edit"></i> Edit
                              </a>
                              
                              <!-- Delete Button -->
                              <form action="/admin/products/delete/<%= product._id %>" method="POST">
                                <% if (!product.isDeleted) { %>
                                  <button type="submit" class="delete-btn">Delete</button>
                                <% } else { %>
                                  <button type="submit" class="undo-btn">Undo</button>
                                <% } %>
                              </form>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                    </div>
                  </div>
                  
                  
                  
