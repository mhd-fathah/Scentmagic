    <script>
      
        document.getElementById('approveReturnBtn').addEventListener('click', async function (event) {
            event.preventDefault();
    
            const orderId = this.getAttribute('data-order-id'); 
            const encodedOrderId = encodeURIComponent(orderId);
            console.log(orderId);
    
            try {
                const response = await fetch(`/admin/approve-return/${encodedOrderId}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                    },
                });
    
                const result = await response.json();
    
                if (result.success) {
                    Swal.fire({
                        icon: 'success',  
                        title: 'Success',
                        text: result.message, 
                    }).then(() => {
                        window.location.reload(); 
                    });
                } else {
                    Swal.fire({
                        icon: 'error',  
                        title: 'Error',
                        text: result.message,  
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error', 
                    title: 'Error',
                    text: 'An error occurred while processing the return.',
                });
            }
        });
    </script>

