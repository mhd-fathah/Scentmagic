                    <h2 class="content-title card-title">Order detail</h2>
                    <p>Details for Order ID: <%= order.orderId %>
                    </p>
                </div>
            </div>
            <div class="card">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i>
                                <b>
                                    <%= new Date(order.createdAt).toLocaleString() %>
                                </b>
                            </span>
                            <br>
                            <small class="text-muted">Order ID: <%= order.orderId %></small>
                        </div>
                        <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                            <form id="updateOrderForm" class="d-inline-flex align-items-center">
                                <select name="status" class="form-select me-3 mb-0 mw-200" id="orderStatus">
                                    <option value="" disabled>Select status</option>
                                    <option value="Pending" <%=order.status==="Pending" ? "selected" : "" %>>Pending
                                    </option>
                                    <option value="Shipped" <%=order.status==="Shipped" ? "selected" : "" %>>Shipped
                                    </option>
                                    <option value="Delivered" <%=order.status==="Delivered" ? "selected" : "" %>
                                        >Delivered</option>
                                    <option value="Cancelled" <%=order.status==="Cancelled" ? "selected" : "" %>
                                        >Cancelled</option>
                                    <option value="Returned" <%=order.status==="Returned" ? "selected" : "" %>>Returned
                                    </option>
                                </select>
                                <button class="btn btn-primary" type="submit">Save</button>
                            </form>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="row mb-50 mt-20 order-info-wrap">
                        <!-- Customer Info -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Customer</h6>
                                    <p class="mb-1">
                                        User ID: <%= order.userId %><br>
                                            Name: <%= order.deliveryAddress.fullName %><br>
                                                Mobile: <%= order.deliveryAddress.mobile %>
                                    </p>
                                </div>
                            </article>
                        </div>
                        <!-- Order Info -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Order Info</h6>
                                    <p class="mb-1">
                                        Payment method: <%= order.paymentMethod %><br>
                                            Total amount: ₹<%= order.totalAmount %><br>
                                                Status: <%= order.status %>
                                    </p>
                                </div>
                            </article>
                        </div>
                        <!-- Delivery Info -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Delivery Address</h6>
                                    <p class="mb-1">
                                        Address: <%= order.deliveryAddress.address %>, <%= order.deliveryAddress.city %>
                                                ,
                                                <%= order.deliveryAddress.state %><br>
                                                    Pincode: <%= order.deliveryAddress.pincode %>
                                    </p>
                                </div>
                            </article>
                        </div>
                    </div>
                    <!-- Products Table -->
                    <div class="row">
                        <div class="col-md-12">
                            <h6 class="mb-4">Ordered Products</h6>
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
