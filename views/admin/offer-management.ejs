                  <th>Type</th>
                  <th>Category/Product</th>
                  <th>Discount</th>
                  <!-- <th>Min. Purchase</th> -->
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Status</th>
                  <th class="text-end">Action</th>
                </tr>
