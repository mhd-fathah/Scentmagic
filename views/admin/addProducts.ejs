    <script>
        let cropper1, cropper2, cropper3, cropper4;
      
        function initializeCropper(imageId, cropperId, containerId, cropBtnId, inputId) {
          document.getElementById(imageId).addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
              const reader = new FileReader();
              reader.onload = function (event) {
                const imageUrl = event.target.result;
                document.getElementById(cropperId).src = imageUrl;
                document.getElementById(containerId).style.display = 'block';  

                window[cropperId] = new Cropper(document.getElementById(cropperId), {
                  aspectRatio: 0,
                  viewMode: 2,
                  autoCropArea: 1,
                });
              };
              reader.readAsDataURL(file);
            }
          });
      
          document.getElementById(cropBtnId).addEventListener('click', function () {
            const canvas = window[cropperId].getCroppedCanvas();
            canvas.toBlob(function (blob) {
              const croppedFile = new File([blob], "cropped-image.jpg", { type: 'image/jpeg' });
      
              const dataTransfer = new DataTransfer();
              dataTransfer.items.add(croppedFile);
      
              const inputField = document.getElementById(inputId);
              inputField.files = dataTransfer.files;
    
              document.getElementById(containerId).style.display = 'none';
    
              const previewContainer = document.getElementById('image-preview-container');
              const previewImage = document.createElement('img');
              previewImage.src = URL.createObjectURL(croppedFile);
              previewImage.style.maxWidth = '200px';
              previewContainer.appendChild(previewImage); 
            });
          });
        }
      
        // Initialize cropper for each image input
        initializeCropper('image1', 'crop-image-1', 'cropper-container-1', 'cropBtn-1', 'image1');
        initializeCropper('image2', 'crop-image-2', 'cropper-container-2', 'cropBtn-2', 'image2');
        initializeCropper('image3', 'crop-image-3', 'cropper-container-3', 'cropBtn-3', 'image3');
        initializeCropper('image4', 'crop-image-4', 'cropper-container-4', 'cropBtn-4', 'image4');
      </script>


