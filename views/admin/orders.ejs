          <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List</h2>
                    <p>Manage all your orders here.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                    <div class="card mb-4">
                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Customer Name</th>
                                            <th>Price</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                        <tr>
                                            <td><%= order.orderId %></td>
                                            <td><b><%= order.deliveryAddress.fullName %></b></td>
                                            <td>$<%= order.totalAmount.toFixed(2) %></td>
                                            <td>
                                                <% if (order.status === 'Delivered') { %>
                                                    <span class="badge rounded-pill alert-success"><%= order.status %></span>
                                                <% } else if (order.status === 'Pending') { %>
                                                    <span class="badge rounded-pill alert-warning"><%= order.status %></span>
                                                <% } else if (order.status === 'Cancelled') { %>
                                                    <span class="badge rounded-pill alert-danger"><%= order.status %></span>
                                                <% } else { %>
                                                    <span class="badge rounded-pill alert-secondary"><%= order.status %></span>
                                                <% } %>
                                            </td>
                                            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                            <td class="text-end">
                                              
                                              <div class="d-inline-flex gap-2">
                                                <a class="btn btn-sm btn-light rounded font-sm" href="/admin/order/<%= order.orderId %>" role="button" aria-label="View details for Order <%= order.orderId %>">View details</a>

                                                  <a class="btn btn-sm btn-light rounded font-sm" href="/order/edit/<%= order._id %>">Edit info</a>
                                              </div>
                                          </td>
                                          
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Add Pagination if necessary -->
            <div class="pagination-area mt-4">
                <% if (pagination) { %>
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <% if (pagination.hasPreviousPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/orders?page=<%= pagination.previousPage %>" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            <% } %>
            
                            <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/orders?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
            
                            <% if (pagination.hasNextPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/orders?page=<%= pagination.nextPage %>" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
