        /* Container for the timeline */
        .vertical-timeline {
            list-style-type: none;
            padding: 0;
            margin: 0;
            position: relative;
        }

        .timeline-item {
            position: relative;
            padding-left: 40px;
            margin-bottom: 20px;
        }

        /* Timeline dot */
        .timeline-dot {
            position: absolute;
            left: 0;
            top: 0;
            width: 10px;
            height: 10px;
            background-color: #007bff;
            /* Blue color for the dot */
            border-radius: 50%;
            box-shadow: 0 0 0 4px #fff;
            /* Creates the white border around the dot */
        }

        /* Timeline content box */
        .timeline-content {
            /* background-color: #f8f9fa; */
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Optional: Styling for the member's name and email */
        .timeline-content h6 {
            font-size: 1.1em;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .timeline-content p {
            font-size: 0.9em;
            color: #555;
        }

        /* Optional: Styling for the timeline items */
        .vertical-timeline .timeline-item:nth-child(odd) .timeline-dot {
            background-color: #28a745;
            /* Green dot for odd items */
        }

        .vertical-timeline .timeline-item:nth-child(odd) .timeline-content {
            /* background-color: #e9f7ef; */
            /* Light green background for odd items */
        }

        /* Animation for the timeline items */
        .timeline-item {
            opacity: 0;
            transform: translateX(-50px);
            animation: fadeIn 0.5s forwards;
            animation-delay: 0.2s;
            /* Adjust for different timing per item */
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }



        /* Timeline container */
/* Container for the entire timeline */
.activity-timeline-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    width: 100%;
    margin: 0;
    padding: 0;
}

/* The main vertical line that connects all the dots */
.activity-timeline-line {
    position: absolute;
    left: 20px;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: #ddd; /* Light gray color for the line */
}

/* Container for each activity item */
.activity-timeline-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 20px;
    position: relative;
}

/* Dot representing the activity */
.activity-timeline-dot {
    position: absolute;
    left: 20px;
    top: 0;
    width: 16px;
    height: 16px;
    background-color: #007bff; /* Blue color for the dot */
    border-radius: 50%;
    border: 4px solid white; /* White border around the dot */
    z-index: 10;
}

/* Content area for each activity */
.activity-timeline-content {
    padding: 12px;
    background-color: #f8f9fa;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    margin-left: 40px;
    width: calc(100% - 60px); /* Make space for the dot and line */
}

/* Header with the date and optional icon */
.activity-timeline-content h6 {
    font-size: 1.1em;
    font-weight: bold;
    margin-bottom: 8px;
}

/* Activity description */
.activity-timeline-content p {
    font-size: 0.9em;
    color: #555;
}

/* Styling for active items */
.activity-timeline-item.active .activity-timeline-dot {
    background-color: #28a745; /* Green color for active dots */
}

/* Hover effect for timeline content */
.activity-timeline-item:hover .activity-timeline-content {
    background-color: #e9ecef;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

