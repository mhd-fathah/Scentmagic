    <script>
        // Show or hide the custom date range inputs based on the selected report type
        const reportType = document.getElementById("reportType");
        const customDateRange = document.querySelector(".custom-date-range");
    
        reportType.addEventListener("change", function() {
            if (reportType.value === "custom") {
                customDateRange.style.display = "block";
            } else {
                customDateRange.style.display = "none";
            }
        });
    
        // Function to generate the report based on the selected filters
        function generateReport() {
            const reportTypeValue = reportType.value;
            const startDate = document.getElementById("startDate").value;
            const endDate = document.getElementById("endDate").value;
    
            // Fetch report data from the backend based on the report type and date range
            fetch(`/admin/report?type=${reportTypeValue}&startDate=${startDate}&endDate=${endDate}`)
                .then(response => response.json())
                .then(data => {
                    // Populate the summary with the fetched data
                    document.getElementById('totalSales').textContent = `₹${(data.totalSales || 0).toFixed(2)}`;
                    document.getElementById('totalDiscounts').textContent = `₹${(data.totalDiscounts || 0).toFixed(2)}`;
                    document.getElementById('totalCoupons').textContent = `₹${(data.totalCoupons || 0).toFixed(2)}`;
                    document.getElementById('totalOffers').textContent = `₹${(data.totalOffers || 0).toFixed(2)}`;
                    document.getElementById('netSales').textContent = `₹${(data.netSales || 0).toFixed(2)}`;
    
                    // Populate the sales table dynamically
                    const salesTableBody = document.getElementById("salesTableBody");
                    salesTableBody.innerHTML = ''; // Clear previous rows
    
                    data.sales.forEach(sale => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td class="text-center">
                                <div class="form-check align-middle">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </td>
                            <td>${sale.orderId}</td>
                            <td>${sale.date}</td>
                            <td>₹${(sale.discount || 0).toFixed(2)}</td>
                            <td>₹${(sale.coupon || 0).toFixed(2)}</td>
                            <td>₹${(sale.total || 0).toFixed(2)}</td>
                            <td>${sale.paymentStatus}</td>
                        `;
                        salesTableBody.appendChild(row);
                    });
                })
                .catch(error => {
                    console.error("Error fetching report data:", error);
                });
        }
    </script>
    


