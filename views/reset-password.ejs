<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scentmagic - Reset Password</title>
    <link rel="stylesheet" href="/css/forgot-password.css">
</head>
<body>
    <div class="container">
        <!-- Left Side - Form -->
        <div class="form-container">
            <div class="logo">
                <img src="/img/login/logo.png" alt="Scentmagic Logo">
            </div>

            <h2>Reset Password</h2>
            <h3>Create your new password</h3>
            <form action="/reset-password/<%= token %>" method="POST">
                <div class="input-group">
                    <label for="new-password">NEW PASSWORD</label>
                    <input type="password" id="new-password" name="password" placeholder="New password" required>
                </div>
                <div class="input-group">
                    <label for="confirm-password">CONFIRM PASSWORD</label>
                    <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm password" required>
                    <span id="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
                </div>
                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>

        <!-- Right Side - Image -->
        <div class="image-container">
            <img src="/img/login/hero-bg.jpeg" alt="Perfume bottle with cherry blossoms">
        </div>
    </div>

    
    <script>
        // Toggle password visibility
        function togglePassword() {
            const password = document.getElementById('confirm-password');
            const toggle = document.getElementById('toggle-password');
            if (password.type === "password") {
                password.type = "text";
                toggle.textContent = "üôà";
            } else {
                password.type = "password";
                toggle.textContent = "üëÅÔ∏è";
            }
        }
    
      
    </script>
</body>
</html>
