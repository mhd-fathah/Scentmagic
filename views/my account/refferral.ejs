
    <title>Premium Referral Program</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/my account/refferral.css">

    
<body>
    

    <!-- Referral Section -->
    <section class="product-details spad">
        <div class="container">
            <!-- Header -->
            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="product__details__header text-center">
                        <h3 class="display-4 mb-3">Refer & Earn Rewards</h3>
                        <p class="lead text-muted">Share the love and get rewarded with each successful referral</p>
                    </div>
                </div>
            </div>
    
            <!-- Main Content -->
            <div class="row">
                <!-- Left Column -->
                <div class="col-lg-6">
                    <div class="reward-card p-4 mb-4">
                        <span class="floating-badge"><%= referralStatus %></span>
                        <div class="text-center">
                            <i class="fas fa-gift reward-icon pulse-animation"></i>
                            <h4 class="mb-3">Your Referral Code</h4>
                            <div class="referral-code-box">
                                <div class="product__details__price"><%= referralCode %></div>
                                <button class="primary-btn" onclick="copyCode()">
                                    <i class="fas fa-copy me-2"></i>Copy Code
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="toast-container position-fixed bottom-0 end-0 p-3">
                        <div id="toastMessage" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">
                                    Referral code copied to clipboard!
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
    
                    <!-- Share Options -->
                    <div class="reward-card p-4">
                        <h4 class="mb-4">Share Via</h4>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="https://wa.me/?text=<%= referralCode %>" class="primary-btn share-btn whatsapp-btn">
                                <i class="fab fa-whatsapp me-2"></i>WhatsApp
                            </a>
                            <a href="mailto:?subject=Check%20out%20this%20referral&body=<%= referralCode %>" class="primary-btn share-btn email-btn">
                                <i class="far fa-envelope me-2"></i>Email
                            </a>
                        </div>
                    </div>
                </div>
    
                <!-- Right Column -->
                <div class="col-lg-6">
                    <div class="reward-card p-4">
                        <h4 class="mb-4">How It Works</h4>
                        <div class="progress-step">
                            <h5><i class="fas fa-share-alt me-2 text-primary"></i>Share Your Code</h5>
                            <p class="text-muted mb-0">Share your unique referral code with friends</p>
                        </div>
                        <div class="progress-step">
                            <h5><i class="fas fa-shopping-bag me-2 text-primary"></i>Friends Shop</h5>
                            <p class="text-muted mb-0">They get ₹500 off on their first purchase</p>
                        </div>
                        <div class="progress-step">
                            <h5><i class="fas fa-gift me-2 text-primary"></i>Earn Rewards</h5>
                            <p class="text-muted mb-0">Get ₹500 in your wallet after their purchase</p>
                        </div>
                    </div>
    
                    <!-- Stats Card -->
                    <div class="reward-card p-4 mt-4">
                        <h4 class="mb-4">Your Referral Stats</h4>
                        <div class="row text-center">
                            <div class="col-4">
                                <h3 class="text-primary"><%= totalReferrals %></h3>
                                <p class="text-muted">Total Referrals</p>
                            </div>
                            <div class="col-4">
                                <h3 class="text-primary"><%= totalEarned %></h3>
                                <p class="text-muted">Total Earned</p>
                            </div>
                            <div class="col-4">
                                <h3 class="text-primary"><%= pendingRewards %></h3>
                                <p class="text-muted">Pending</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        function copyCode() {
            navigator.clipboard.writeText('<%= referralCode %>'); 
            
            var toastEl = document.getElementById('toastMessage');
            
            var toast = new bootstrap.Toast(toastEl, { delay: 5000 });
            
            toast.show();
        }
    </script>
</body>
