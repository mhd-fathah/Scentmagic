<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Profile</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <link rel="stylesheet" href="/css/my-account/view-profile.css">
</head>
<body>
  <div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header d-flex justify-content-between align-items-center">
      <h1>My Profile</h1>
      <button class="btn btn-edit">Edit Profile</button>
    </div>

    <!-- Profile Info -->
    <div class="profile-info">
      <h5><%= user.name %></h5>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Phone:</strong> <%= user.phone %></p>
      <p><strong>Address:</strong> <%= user.address %></p>
    </div>

    <!-- Profile Sections -->
    <% const sections = [
      { title: 'Order History', description: 'View your past orders, including status and delivery details.', buttonText: 'View Orders', link: '/orders' },
      { title: 'Payment Methods', description: 'Manage your payment methods, such as credit cards and PayPal accounts.', buttonText: 'Manage Payment Methods', link: '/payment-methods' },
      { title: 'Change Password', description: 'Change your account password to enhance security.', buttonText: 'Change Password', link: '/change-password' },
      { title: 'Logout', description: 'If you want to logout, click the button below.', buttonText: 'Logout', link: '/logout' }
    ]; %>

    <% sections.forEach(section => { %>
      <div class="profile-section">
        <h6><%= section.title %></h6>
        <p><%= section.description %></p>
        <a href="<%= section.link %>" class="btn btn-outline-magenta"><%= section.buttonText %></a>
      </div>
    <% }); %>

    <!-- Profile Footer -->
    <div class="profile-footer">
      <p>Â© 2024 Scentmagic. All Rights Reserved.</p>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
